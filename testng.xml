<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="All Test Suite">
    <!--<groups>
        <run>
            <exclude name="Sanity"/>
            <include name="Master"/>
        </run>
    </groups>-->

    <listeners>
        <listener class-name="utilities.ExtentReportManager"/>
    </listeners>

    <test thread-count="5" parallel="none" name="TimeSheetManual">
        <parameter name="os" value="window"/>
        <parameter name="browser" value="chrome"/>
        <parameter name="approvalflow" value="manual"/>
        <classes>
             <class name="testBase.SetupPreconditions"/>
             <class name="testCases.TC001_TimesheetApprovalTests"/>
             <class name="testCases.TC002_TimesheetRejectionTests"/>
             <class name="testCases.TC003_TimesheetMultiProjectWorkflowTests"/>
             <class name="testCases.TC004_TimesheetMultiProjectRejectionTests"/>
             <class name="testCases.TC005_TimesheetPartialRejectionForProjectsTests"/>
             <class name="testCases.TC006_TimesheetPartialRejectionForApprovalUserTests"/>
             <class name="testCases.TC008_BulkTimesheetApprovalAndRejectionTests"/>
             <class name="testCases.TC015_TimesheetApprovalDashboardBasicFunctionalityTests"/>
        </classes>
    </test>

    <test thread-count="5" parallel="none" name="SameSchemaInTwoProject">
         <parameter name="os" value="window"/>
         <parameter name="browser" value="chrome"/>
         <parameter name="approvalflow" value="sameschema"/>
         <classes>
             <class name="testBase.SetupPreconditions"/>
             <class name="testCases.TC007_TimesheetSubmissionAndApprovalSameSchemaTests"/>
         </classes>
     </test>

    <test thread-count="5" parallel="none" name="TimesheetAutoApproval">
        <parameter name="os" value="window"/>
        <parameter name="browser" value="chrome"/>
        <parameter name="approvalflow" value="auto"/>
        <classes>
            <class name="testBase.SetupPreconditions"/>
            <class name="testCases.TC009_TimesheetAutoApprovalTest"/>
            <class name="testCases.TC010_TimesheetManualApprovalTests"/>
            <class name="testCases.TC011_TimesheetManualRejectionTests"/>
            <class name="testCases.TC012_TimesheetApprovalMemberAutoApprovalTests"/>
            <class name="testCases.TC013_TimesheetApprovalMemberManualApprovalTests"/>
            <class name="testCases.TC014_TimesheetApprovalMemberManualRejectionTests"/>
        </classes>
    </test>


</suite>